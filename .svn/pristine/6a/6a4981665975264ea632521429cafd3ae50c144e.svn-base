#nav {
    display: table;
    width: 100%;
    margin-bottom: 0.2%;
    padding: 0px;
    border-spacing: 1px 0px;
}

#nav a {
    display: table-cell;
    width: 25%;  /* (100 / numItems)% */
    text-align: center;
    background-image:url(img_global/wall2.png);
    border-radius: 10px 10px 0 0;
    text-decoration: none;
}

#nav a:hover {
    background-image:url(img_global/wall3.png);
}

#nav a li {
    list-style: none;
    line-height: 2em;
    color: #ffffff;
}

input {
    border: 2px solid gray;
    border-radius:2px;
}

textarea {
    border: 2px solid gray;
    border-radius:2px;
}

.correct-field {
    border-color: gray;
}

.incorrect-field {
    border-color: red;
}

.print-message-form {
    font-weight:bold;
    text-align: center;
    padding: 3px;
    margin-bottom: 10px;
    border:2px solid red;
    border-radius:5px;
    background-color: rgba(255, 0, 0, 0.25);
}