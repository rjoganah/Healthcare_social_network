}

#all-content {
    width:960px;
    margin-left:auto;
    margin-right:auto;
}

#header {
    height:100px;
    margin-top:1%;
    margin-bottom: 1%;
}

#footer {
    height:45px;
    margin-top:1%;
    margin-bottom:1%;
    text-align: center;
}

#main {

}

#loginbar {
    height:25px;
    background-image:url(img_global/wall2.png);
    margin-bottom: 0.2%;
    padding-right: 20px;
    padding-top: 8px;
    text-align: right;
}

div #main,#footer,#header {
    background-image:url(img_global/wall2.png);
    border:2px solid #3b3938;
    padding:1em;
}

#logo img {
    float:left;
    width:80px;
    padding:10px;
}

.link-login {
    color: #fff;
    font-weight:bold;
    text-decoration: none;
}

a:hover.link-login {
    text-decoration: underline;
}

