			';

            $i = 1;

            foreach ($result as $r) {
                // do something here
                $rss = $rss . '<item>
				<title>Exams nÂ°' . $i . ' : </title>
				<description>' . $r['pseudo'] . ', isAdmin : ' . $r['isAdmin'] . '</description>
			</item>';

                $i++;
